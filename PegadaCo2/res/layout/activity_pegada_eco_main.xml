<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:background="#006400"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pegadaecologica.PegadaEcoMainActivity" >

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#2E8B57"
        android:onClick="Calcular"
        android:text="CALCULAR Co2"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText2"
        android:layout_marginBottom="15dp"
        android:layout_toLeftOf="@+id/textView1"
        android:layout_toRightOf="@+id/imageView1"
        android:background="#fff"
        android:ems="10"
        android:hint="            Carne Bovina"
        android:inputType="numberDecimal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText1"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignLeft="@+id/textView2"
        android:background="#FA8072"
        android:paddingBottom="11dp"
        android:paddingLeft="5dp"
        android:paddingRight="4dp"
        android:paddingTop="14dp"
        android:text="@string/text_1"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/editText2"
        android:layout_marginBottom="30dp"
        android:layout_toLeftOf="@+id/textView1"
        android:background="#fff"
        android:ems="10"
        android:hint="           Carne de porco"
        android:inputType="numberDecimal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText1"
        android:layout_alignLeft="@+id/editText3"
        android:layout_marginBottom="15dp"
        android:layout_toLeftOf="@+id/textView1"
        android:background="#fff"
        android:ems="10"
        android:hint="          Carne de Frango"
        android:inputType="numberDecimal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText3"
        android:layout_alignBottom="@+id/editText3"
        android:layout_alignRight="@+id/button1"
        android:background="#FA8072"
        android:paddingBottom="11dp"
        android:paddingLeft="5dp"
        android:paddingRight="4dp"
        android:paddingTop="14dp"
        android:text="@string/text_1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText2"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignRight="@+id/textView1"
        android:background="#FA8072"
        android:paddingBottom="11dp"
        android:paddingLeft="5dp"
        android:paddingRight="4dp"
        android:paddingTop="14dp"
        android:text="@string/text_1"
        android:textColor="#fff" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/editText3"
        android:background="#DEB887"
        android:src="@drawable/steak" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/editText2"
        android:layout_toLeftOf="@+id/editText2"
        android:background="#DAA520"
        android:src="@drawable/chicken" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/editText1"
        android:layout_toLeftOf="@+id/editText1"
        android:background="#B8860B"
        android:src="@drawable/ham" />

    <TextView
        android:id="@+id/textPrincipal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_centerVertical="true"
        android:background="#2E8B57"
        android:padding="5dp"
        android:text=" CALCULE A EMISÃƒO PRODUZIDA DE CO2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:background="#fff"
        android:text="      6t/Co2" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textPrincipal"
        android:layout_below="@+id/textView8"
        android:layout_toRightOf="@+id/editText3"
        android:background="#fff"
        android:text="    4t/Co2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:background="#fff"
        android:text="   36t/Co2" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignTop="@+id/textView6"
        android:background="#B8860B"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:text="PORCO ( t )"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/textPrincipal"
        android:background="#DEB887"
        android:padding="2dp"
        android:text="CARNE ( t )"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textPrincipal"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:background="#DAA520"
        android:padding="2dp"
        android:text="FRANGO ( t )"
        android:textColor="#fff" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignRight="@+id/button1"
        android:src="@drawable/leaf2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignParentTop="true"
        android:paddingBottom="5dp"
        android:src="@drawable/web_hi_res_512" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_above="@+id/imageView7"
        android:layout_toLeftOf="@+id/editText1"
        android:src="@drawable/leaf" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignParentBottom="true"
        android:src="@drawable/leaf3" />

</RelativeLayout>